<div class="containter">
  <div class="well" >
    <div class="postQuestion">
        <div class="row">
        <h2><strong>{{model.question}}</strong></h2>
        <p>Asked by: {{model.name}}</p>
      </div>
    </div>
    <div class="row viewPostimg">
      <div class="col-md-offset-3 col-md-6">
        <img  class="singlePostImg" src={{model.img}} alt="">
      </div>
    </div>
    <div class="row viewPostContent">
      <div class="col-md-offset-2 col-md-8">
        <br>
        <p>{{model.content}}</p>
      </div>
    </div>
  </div>
</div>
