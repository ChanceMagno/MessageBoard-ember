<div class="well commentForm">
  <div class="row commentForm">
    <div class="col-md-offset-3 col-md-6">
      {{#if addNewComment}}
      <h1 class="commentNew">New Comment</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="user">User Name</label>
            {{input value=user id="user" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="content">Comment:</label>
            {{textarea value=content id="content" class="form-control"}}
          </div>
          <button class="btn"{{action 'saveComment'}}>Post Comment</button>
        </form>
      </div>
      {{else}}
      <button class="btn"{{action 'commentFormShow'}}>New Comment</button>
      {{/if}}
    </div>
  </div>
</div>
